# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for specific file types
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Binary files should not be treated as text
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Force LF for configuration files
.gitignore text eol=lf
.env text eol=lf
.env.local text eol=lf
.env.production text eol=lf